# enable copy to clipboard
set selection-clipboard clipboard

# set window title
set window-title-basename true
set window-title-home-tilde true

# set status bar title
set statusbar-home-tilde true
set statusbar-basename false

# easily access command mode
map ; focus_inputbar :

# exchange reload and rotate
map r reload
map R rotate

# zooming
map L zoom in
map H zoom out
set zoom-step 7

# display 20 most recent files in completion
set show-recent 20

# don't display directories in completion
set show-directories false

# no notification after selecting text
set selection-notification false

# enable smooth scroll
set smooth-scroll true

# hide the input and title-bar and display v-scrollbar
set guioptions v
set show-v-scrollbar true

# highlight color options
set highlight-transparency 0.2
set highlight-active-color "#3333aa"
set highlight-color "#666688"

# background color
set default-bg "#222230"
