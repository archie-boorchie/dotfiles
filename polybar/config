[colors]
background = #dd111111
background-alt = #aa444444
foreground = #dfdfdf
foreground-alt = #999999
foreground-alt-darker = #555555
primary = #ffb52a
secondary = #ff0000
alert = #bd2c40


[bar/main]

monitor = ${env:MONITOR:}

; Enable intel process messaging
enable-ipc = true

; Put the bar at the bottom of the screen
bottom = false

; Tell the Window Manager not to configure the window.
; This keeps i3wm windows fixed when toggling polybar
override-redirect = true

; Keep polybar below all other windows (inluding floating ones) when using i3wm
wm-restack = i3

width = 100%
height = 20

offset-x = 0
offset-y = -2
radius = 2

; Center the `modules-center` block between the left and right block
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-top = 10
border-bottom = 0
border-left = 14
border-right = 14
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 4

font-0 = NotoSans-Regular:size=8;-0
font-1 = MaterialIcons:size=10;+1
font-2 = FontAwesome:size=9;+1
font-3 = MaterialDesignIcons:size=11;+1

modules-left = i3
modules-center = xwindow
modules-right = cpu memory filesystem xbacklight pulseaudio xkeyboard wlan eth battery temperature date powermenu

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = #222222

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


